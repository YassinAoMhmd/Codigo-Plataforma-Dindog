<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/iconos/Logo_Dindog.svg" rel="shortcut icon">
    <title>Estadísticas de Reservas - DinDog</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheet/admin/estadisticas/reserva.css">
</head>
<body>
    <%- include('../../partials/navbarAdmin') %>
    <div class="container mt-5">
        <h1 class="text-center mb-5">Estadísticas de Reservas</h1>
        <div class="stats-card shadow-sm mb-4 p-4">
            <h3 class="text-primary">Total de Reservas</h3>
            <div class="data-point">Número total: <span class="highlight"><%= totalReservas %></span></div>
            <div class="data-point">Reservas activas: <span class="highlight"><%= reservasActivas %></span></div>
            <div class="data-point">Reservas completadas: <span class="highlight"><%= reservasCompletadas %></span></div>
            <div class="data-point">Reservas canceladas: <span class="highlight"><%= reservasCanceladas %></span></div>
        </div>
        <div class="stats-card shadow-sm p-4">
            <h3 class="text-primary">Reservas por Mes</h3>
            <% reservasPorMes.forEach(function(count, index) { %>
                <div class="data-point"><%= ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'][index] %>: <span class="highlight"><%= count %></span></div>
            <% }) %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
